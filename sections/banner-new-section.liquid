<div class="customizable-banner page-width">
  <div class="main-image" style="background-image: url({{ section.settings.main_image | img_url: 'large' }});">
    <div class="custom-badge {{ section.settings.badge_position }}">
      <img src="{{ section.settings.badge_image | img_url: 'small' }}" alt="Badge">
    </div>
  </div>
  <div class="text-content">
    <h2>{{ section.settings.doctor_name }}</h2>
    <h3>{{ section.settings.headline }}</h3>
    <p>{{ section.settings.body_text }}</p>
    <a href="{{ section.settings.button_url }}" class="button">{{ section.settings.button_text }}</a>
  </div>
</div>

{{ 'banner-new-section.css' | asset_url | stylesheet_tag }}

{% schema %}
{
"name": "Customizable Banner",
"settings": [
{
"type": "image_picker",
"id": "main_image",
"label": "Main Image"
},
{
"type": "image_picker",
"id": "badge_image",
"label": "Banner Image"
},
{
"type": "select",
"id": "badge_position",
"label": "Banner Position",
"options": [
{
"value": "top-left",
"label": "Top Left"
},
{
"value": "top-right",
"label": "Top Right"
},
{
"value": "bottom-left",
"label": "Bottom Left"
},
{
"value": "bottom-right",
"label": "Bottom Right"
}
],
"default": "top-right"
},
{
"type": "text",
"id": "doctor_name",
"label": "Doctor's Name"
},
{
"type": "text",
"id": "headline",
"label": "Headline"
},
{
"type": "textarea",
"id": "body_text",
"label": "Body Text"
},
{
"type": "text",
"id": "button_text",
"label": "Button Text"
},
{
"type": "url",
"id": "button_url",
"label": "Button URL"
}
],
"presets": [
{
"name": "Customizable Banner",
"category": "Custom"
}
]
}
{% endschema %}